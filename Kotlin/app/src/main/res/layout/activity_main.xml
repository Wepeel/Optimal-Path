        android:id="@+id/textViewPains"
        android:layout_width="297dp"
        android:layout_height="65dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPains" />

    <TextView
        android:id="@+id/textViewSymptoms"
        android:layout_width="409dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/spinnerPains"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSymptoms" />


</androidx.constraintlayout.widget.ConstraintLayout>